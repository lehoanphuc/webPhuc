@model IEnumerable<demoWeb.Models.GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table">
    <tr>
        <th colspan="1" style="color: black; width: 180px">Tên Sản Phẩm </th>
        <th colspan="2" style="color: black; width: 180px">Hình </th>
        <th colspan="3" style="color: black;">Giá Sản Phẩm </th>
        <th colspan="4" style="color: black;">Số Lượng </th>
        <th colspan="5" style="color: black;">Số Lượng Tồn </th>
        <th colspan="6" style="color: black;">Thành Tiền </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>


            @using (Html.BeginForm("CapNhapGioHang", "GioHang", new { @id = item.MaSP }))
            {
                <td colspan="1" >@Html.DisplayFor(modelItem => item.TenSP) </td>
                <td colspan="2"><img style="width:180px" src="@item.Hinh"  /></td>
                <td colspan="3">@String.Format("{0:0,0}", item.GiaSP) VNĐ</td>
                <td colspan="4"><input type="number" min="1" max="@item.SoLuongTon" name="txtSoLg" value="@item.SoLuong" /></td>
                <td colspan="5">@Html.DisplayFor(modelItem => item.SoLuongTon)</td>
                <td colspan="6">@Html.DisplayFor(modelItem => item.ThanhTien)</td>
                <td>
                    <a href="@Url.Action("Detail","Sach", new { @id = item.MaSP })">Chi Tiết</a>
                    |@Html.ActionLink("Xoá", "XoaGioHang", new { @id = item.MaSP })
                </td>
                <td><input type="submit" value="Cập Nhật" class="btn btn-success" /></td>
            }
        </tr>
    }
    <tr style="font-weight:bold; color:red; text-align:right">
        <td colspan="2">Số Loại Sản Phẩm: @ViewBag.TongSoLuongSanPham</td>
        <td colspan="4">Số Sản Phẩm: @ViewBag.TongSoLuong</td>
        <td colspan="6">Tổng Tiền: @String.Format("{0:0,0}", @ViewBag.TongTien) VNĐ</td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="6">
            @Html.ActionLink("Xoá Giỏ Hàng", "XoaTatCaGioHang")
        </td>
    </tr>
    <tr style="font-weight:bold; color:yellow; text-align:right">
        <td colspan="5">
        @*<td style="font-weight:bold">
            <a href="@Url.Action("ThanhToanMoMo","GioHang")" class="btn btn-success">Thanh Toán MoMo </a>*@
        
        @Html.ActionLink("Đặt Hàng", "DatHang", "GioHang")
        </td>
</table>
